{
    "compileOnSave": false,
    "module": "esnext",
    "compilerOptions": {
        // TODO: Declare all types and set to true
        "noImplicitAny": false,
        "target": "ES5",
        "isolatedModules": false,
        // "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "esnext",
        "lib": ["webworker", "es6", "scripthost", "dom"],
        "sourceMap": true,
        "jsx": "react"
    },
    "exclude": [
        "**/*.worker.ts",
        "node_modules/",
    ],
    "include": [
        "node_modules/@types/**/*.d.ts"
    ]
}
